       <script>
        const name = []
            const age = []
          function submit_click() {
            //document.getElementById('output1').innerHTML = document.getElementById('name').value
           // document.getElementById('output2').innerHTML = document.getElementById('age').value

            //document.getElementById('name').value=''
           // document.getElementById('age').value=''

            name.push(document.getElementById('name').value)
            age.push(document.getElementById('age').value)

            console.log(name)
            console.log(age)


          } 

          function reset_click(){

            name.push(document.getElementById('name').value)
            age.push(document.getElementById('age').value)

            console.log(name)
            console.log(age)

            document.getElementById('name').value=''
            document.getElementById('age').value=''


          }
       </script>
       <script>
        const fruit = ['Apple','Banana','Cherry','Durian']

        function array_click() {

            for (let i = 0; i < fruit.length; i++){
                document.getElementById('output3').
                innerHTML += fruit[i] + '<br>'

            }
            //document.getElementById('output3').innerHTML = fruit
        }



